{
  "info": {
    "name": "TODO API",
    "description": "Complete API collection for the Node.js Express TODO application with all CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/",
        "description": "Get API information including version and available endpoints"
      }
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/todos",
        "description": "Retrieve all todos from the system"
      }
    },
    {
      "name": "Get Todo by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/todos/:id",
        "description": "Get a specific todo by its ID"
      }
    },
    {
      "name": "Create New Todo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Todo\",\n  \"description\": \"This is a sample todo item\"\n}"
        },
        "url": "{{baseUrl}}/todos",
        "description": "Create a new todo. Title is required, description is optional"
      }
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Todo Title\",\n  \"description\": \"Updated description\",\n  \"completed\": true\n}"
        },
        "url": "{{baseUrl}}/todos/:id",
        "description": "Update an existing todo. All fields are optional - only provided fields will be updated"
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/todos/:id",
        "description": "Delete a todo by its ID"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}